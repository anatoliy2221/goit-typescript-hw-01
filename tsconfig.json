{
  "compilerOptions": {
    "rootDir": "./src",                                 
    "outDir": "./dist",                                
    "allowJs": false,                                
    "allowSyntheticDefaultImports": true,           
    "emitDecoratorMetadata": true,                    
    "esModuleInterop": true,                            
    "experimentalDecorators": true,                   
    "lib": ["dom", "ES2021"],                                        
    "module": "ES2020",                               
    "moduleResolution": "node",                     
    "preserveConstEnums": true,                     
    "skipLibCheck": true,                                
    "strictNullChecks": true,                         
    "sourceMap": true,                               
    "target": "es2019"}, 
    "include": ["**/*.ts"]
  }                                                      
